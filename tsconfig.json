{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "rootDirs": [
      "./src",
      "./types"
    ],
    "paths": {
      "#/*": [
        "./src/types/*"
      ]
    }
  },
  "include": [
    "./src",
    "index.ts"
  ],
  "extends": "expo/tsconfig.base"
}
